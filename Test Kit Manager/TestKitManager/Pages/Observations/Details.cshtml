@page
@model TestKitManager.Pages.Observations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Observation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.LastUpdated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.Priority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.ThirdPartyIssue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observation.ThirdPartyIssue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Machines)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach(var machine in Model.Observation.Machines)
                {
                    <li>@Html.DisplayFor(model => machine.Name)</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observation.Services)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach(var service in Model.Observation.Services)
                {
                    <li>@Html.DisplayFor(model => service.Name) (@Html.DisplayFor(model => service.Location.Name))</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Observation.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
